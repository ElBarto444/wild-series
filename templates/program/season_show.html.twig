{% extends 'base.html.twig' %}


{% block title %}
	Saison #{{ season.number }}
	-
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ season.title }}
				de
				{{ program.title }}</h1>
			<p>{{ season.description }}</p>
			<h2>Liste des épisodes de la saison</h2>

			<ul>
				{% for episode in episodes %}
					<li>
						<a href="{{ path("program_episode_show", { 'program': program.id, 'season': season.id, 'episode': episode.id }) }}">{{ episode.title }}</a>
					</li>
				{% endfor %}
			</ul>

		</div>
	</div>

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
