{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
		<h2>Liste des saisons :</h2>
		{% for season in program.seasons %}
		<ul>
			<li><a href="{{ path('program_season_show', { 'program': program.id, 'season': season.id } )}}">{{ season.title }}</a></li>
		</ul>
		
	</div>

	<a href="{{ path('app_season_index') }}">Ajouter une saison</a><br>
	<a href="{{ path('app_season_edit', {'id': season.id}) }}">Éditer/supprimer une saison</a>
		{% endfor %}
	<a href="{{ path('program_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
